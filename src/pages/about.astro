<style>
	main {
		margin: auto;
		max-width: calc(100% - 2rem);
		line-height: 1.75;
	}
	
	section {
		width: 70%;
		margin: 0 auto 6em auto;
	}

	img {
		height: 60vh;
		width: 35vw;
		object-fit: cover;
		object-position: ;
		box-shadow: 0.5rem 0.5rem #f4ff5e;
	}
	.center-img {
		display: block;
		border-radius: 5px;
		margin: 1em auto 3em auto;
	}
	.center-text {
		text-align: center;
	}

	p {
        width: 42%;
    }

    b {
        letter-spacing: 0.12em;
    }

	.justForFlex {
        justify-content: space-between;
        padding-top: 1.5em;
		display: flex;
	}

	#slug-photo {
		height: 40vh;
		width: 40vh;
		object-position: 40% 50%;
		border-radius: 50%;
		box-shadow: none;
		margin-bottom: 3em;
	}

	.inline-header {
		display: inline;
	}

	h4 span {
		font-family: 'Manrope';
		font-size: 0.8rem;
		letter-spacing: 0.2rem;
	}

	.skills {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-around;
	}
	.skills div {
		width: 300px;
	}
	.skill-title {
		text-decoration: underline;
		margin-bottom: 0;
		margin-top: 3rem;
	}


	#contact {
		margin-bottom: 4em;
	}
	#contact-slug {
		text-align: center;
	}
	#contact-info {
        margin-bottom: 2em;
        width: 100%;
    }
	#contact-info p {
        width: 90%;
    }

	#icon-container {
		display: flex;
		gap: 2em;
	}
	.icon {
		height: 10vh;
		width: 10vh;
		fill: #FFFFF2;
	}
	.icon:hover {
        fill: #f4ff5e;
        transition: 0.3s ease;
    }

</style>