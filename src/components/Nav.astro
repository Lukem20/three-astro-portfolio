---
interface Props {
	boxShadowColor: string;
}

const { boxShadowColor } = Astro.props;
---

<nav>
    <ul>
      <li><a href="/three-astro-portfolio/"><h4 style="--hover-color: {boxShadowColor}">Home</h4></a></li>
      <li><a href="/three-astro-portfolio/about/"><h4 style="--hover-color: {boxShadowColor}">About</h4></a></li>
      <li><a href="/three-astro-portfolio/about/#contact/"><h4 style="--hover-color: {boxShadowColor}">Contact</h4></a></li>
    </ul>
</nav>

<style>
    nav {
        padding: 1.5em 0;
        margin-right: 1.5em;
    }
    ul {
        list-style: none;
        text-transform: uppercase;
        display: flex;
        gap: 2.3em;
        padding-right: 0.7em;
    }

    a {
        text-decoration: none;
        color: #FFFFF2
    }
    a:visited {
        color: #FFFFF2;
    }

    h4 {
        font-family: League Spartan;
		font-size: 1.25rem;
		line-height: 1.2rem;
		font-weight: 500;
		letter-spacing: 0.05em;
        position: relative;
        text-decoration: none;
        box-shadow: inset 0 0 0 0 #4cadca;
        margin: 0 -.25rem;
        padding: 0 .25rem;
        transition: color .3s ease-in-out, box-shadow .3s ease-in-out;
    }
    h4::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 3px;
        background-color: #FFFFF2;
        bottom: 0;
        left: 0;
        transform-origin: right;
        transform: scaleX(0);
        transition: transform .3s ease-in-out;
    }
    h4:hover::before {
        transform-origin: left;
        transform: scaleX(1);
    }   
    h4:hover {
        box-shadow: inset 200px 0 0 0 #2A6679;
        color: #f4ff5e;
    }
    h4:active {
        color: #f4ff5e;
    }


</style>